super+Insert
  xrandr --output VIRTUAL1 --off --output eDP1 --off --output DP1 --off --output DP2-1 --off --output DP2-2 --off --output DP2-3 --off --output HDMI2 --off --output HDMI1 --primary --mode 1920x1080 --pos 0x0 --output DP2 --off; \
  bspc monitor HDMI1 -o w e d f v n i o c h;
