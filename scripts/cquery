#!/usr/bin/env bash

# if [[ -z "${ccls_include_dirs}" ]]; then
#     exec ~/git/ccls/build/release/bin/ccls --log-file=/tmp/cq.txt "$@"
# fi

# export CCLS_TRACEME=1
# export CCLS_CRASH_RECOVERY=0

cxx_flags='[
      "-xobjective-c++-header",
      "-D__cpp_deduction_guides=0",
      "-Wno-macro-redefined",
      "-O0"'

for i in $ccls_cxx_flags; do
	cxx_flags="${cxx_flags}, \"$i\""
done

for i in $ccls_include_dirs; do
	cxx_flags="${cxx_flags}, \"-I$i\""
done

cxx_flags="${cxx_flags}]"

blacklist='["/tmp"'
for i in $ccls_blacklist; do
	blacklist="${blacklist}, \"$i\""
done
blacklist="${blacklist}]"

if [[ -z "$ccls_suffix" ]]; then
	ccls_suffix=$(basename "$(git rev-parse --show-toplevel)")
fi
if [[ ! -z "$ccls_suffix" ]]; then
	ccls_suffix=-"$ccls_suffix"
fi

multi=0
# if [[ -z "$ccls_multi" ]]
# then
#     multi=0
# else
#     multi=1
# fi
#
init=$(jq -c -n --argjson multi "$multi" --argjson blacklist "$blacklist" --argjson cxx_flags "$cxx_flags" '
{
  "highlight": { "largeFileSize": 131072 },
  "cache": { "directory": "/home/amos/.cache/.ccls_cached_index" },
  "client": { "snippetSupport": true },
  "index": {
    "multiVersion": $multi,
    "trackDependency": 2,
    "comments": 0,
    "initialBlacklist": $blacklist,
    "blacklist": ["~$"]
  },
  "workspaceSymbol": { "caseSensitivity": 0, "maxNum": 2000 },
  "diagnostics": {
    "onChange": 1000,
    "onOpen": 1000,
    "onSave": 1000,
    "blacklist": ["~$"]
  },
  "completion": {
    "detailedLabel": false,
    "include": {
        "whitelist": ["ccutils", "/usr/(local/)?include/(sys/)?[^/]+\\.h$"],
        "blacklist": [
          "(x86_64-redhat-linux|x86_64-pc-linux-gnu)/(32|bits|tr1|tr2|parallel|experimental|profile|ext|debug)/",
          "^/usr/(local/)?include/c\\+\\+/[0-9\\.]+/(bits|tr1|tr2|parallel|experimental|profile|ext|debug)/",
          "^/usr/(local/)?include/c\\+\\+/v1/",
          "^/usr/(local/)?include/(?!c\\+\\+).+"
        ]
    }
  },
  "clang": {
    "excludeArgs": ["-fno-tree-loop-distribute-patterns", "-fwhole-program"],
    "extraArgs": $cxx_flags
  }
}')

exec ~/git/ccls/release/ccls --log-file=/tmp/cq.txt$ccls_suffix --init="$init" "$@"
