#!/usr/bin/env bash

file=$(realpath "$1")
session=$(tmux display-message -p "#S")
if [[ $session = "gui" ]]
then
    bspc desktop --focus e
else
    tmux switch-client -t emacs
fi
if [ -z "$2" ]
then
    [[ $session = "gui" ]] || emacsclient -n -eval "(setq +amos-tmux-need-switch t)" > /dev/null
    emacsclient -n -eval "(progn (+amos/workspace-new) (find-file \"$file\"))" > /dev/null
else
    emacsclient -n -eval "(find-file \"$file\")" > /dev/null
fi
