#!/usr/bin/env bash

onlyscreen() {
    target="$1"
    mode="$2"  # scale or noscale
    cmd="xrandr"

    for out in $(xrandr | awk '/ connected/{print $1}'); do
        if [ "$out" != "$target" ]; then
            cmd="$cmd --output $out --off"
        fi
    done

    if [ "$mode" = "scale" ]; then
        # 1080p + scale 2x2
        cmd="$cmd --output $target --primary --mode 1920x1080 --scale 2x2 --pos 0x0 --rotate normal"
    else
        cmd="$cmd --output $target --primary --mode 3840x2160 --pos 0x0 --rotate normal"
    fi

    eval "$cmd"
}

case $(hostname) in
    abt480)
        onlyscreen eDP-1 scale
        ;;
    abx1gen3)
        onlyscreen eDP-1-1
        ;;
    t450s)
        xrandr --output VIRTUAL1 --off --output eDP1 --primary --mode 1600x900 --pos 0x0 --brightness 1 --output DP1 --off --output DP2-1 --off --output DP2-2 --off --output DP2-3 --off --output HDMI2 --off --output HDMI1 --off --output DP2 --off
        ./monitormove eDP1 DP2-2
        ;;
    qtw)
        onlyscreen HDMI-1
        ;;
    *)
        ~/.screenlayout/inversed.sh
        ;;
esac
redshiftctl on
