#!/usr/bin/env bash

(( UID == 0 )) || [[ -n "$SUDO_UID" ]] || exec sudo "$0" "$@" || exit

# updateroutes

ip r d 0.0.0.0/1
ip r d 128.0.0.0/1
gw=$(ip r g 168.235.105.19 | cut -d" " -f3)


ip r f table direct
ip r a 0.0.0.0/0 via $gw table direct
ip rule add fwmark 8 table direct pref 20000

ip r f table cn
ip -batch - <<EOF
$(sed "s/GATEWAY/$gw/" /home/amos/.routefile)
EOF

# extra non-cn routes

