#!/usr/bin/env bash

file=$(realpath $1)
tmux switch-client -t emacs
if [ -z $2 ]
then
    emacsclient -n -eval "(progn (+amos/workspace-new) (setq +amos-tmux-need-switch t) (doom/sudo-find-file \"$file\"))" > /dev/null
else
    emacsclient -n -eval "(progn (setq +amos-tmux-need-switch t) (doom/sudo-find-file \"$file\"))" > /dev/null
fi
