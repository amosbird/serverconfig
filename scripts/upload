#!/usr/bin/env bash

errlog() {
	notify-send -a "teiler" "Error Log" "$(cat /dev/fd/2)";
	exit 1
}
set -o pipefail

(/home/amos/bin/pbpst -P https://la.wentropy.com -Sf "$1" | awk 'END{printf $1}' | copyq add - && copyq select 0) || errlog; notify-send -a "teiler" "Text Uploaded" "$(copyq clipboard)"
