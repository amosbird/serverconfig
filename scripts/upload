#!/usr/bin/env bash

export http_proxy=http://127.0.0.1:12639 https_proxy=https://127.0.0.1:12639
errlog() {
	notify-send -a "teiler" "Error Log" "$1"
	exit 1
}

set -o pipefail

if [[ -z $2 ]]; then
	if [[ -z $GUI ]]; then
		curl --no-progress-meter -u "$(pass show misc/pastebin)" -F 'paste=<'"$1" oracle.wentropy.com | perl -pe 'chomp if eof' | osc52clip
		osc52notify "Text Uploaded"
	else
		{ err=$({ curl --no-progress-meter -u "$(pass show misc/pastebin)" -F 'paste=<'"$1" oracle.wentropy.com | perl -pe 'chomp if eof' | copyq add - && copyq select 0; } 2>&1 >&3); } 3>&1 || errlog "$err"
		notify-send -a "teiler" "Text Uploaded" "$(copyq clipboard)"
	fi
else
	curl --no-progress-meter -u "$(pass show misc/pastebin)" -F 'paste=<'"$1" oracle.wentropy.com
fi
