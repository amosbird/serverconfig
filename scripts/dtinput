#!/usr/bin/env bash
# 通过 dtpick-x11 快速弹窗选择时间，确认后将时间串输入到原焦点窗口
cache=~/.cache/dtpick_last
old_mtime=$(stat -c %Y "$cache" 2>/dev/null || echo 0)
dtpick-x11
new_mtime=$(stat -c %Y "$cache" 2>/dev/null || echo 0)
[ "$new_mtime" != "$old_mtime" ] || exit 1
dt=$(head -1 "$cache")
[ -n "$dt" ] || exit 1
inputstr "$dt"
