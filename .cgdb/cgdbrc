set arrowstyle=long
set ignorecase
set tabstop=2

set winsplit=src_big

map e :set<Space>nodis<CR>
map a :set<Space>dis<CR>
map m :stepi<CR>
map M :Si<CR>
map r :start<CR>
map R :edit<CR>
map c :continue<CR>
map C :C<CR>
map f :finish<CR>
map n :next<CR>
map N :N<CR>
map s :step<CR>
map S :S<CR>
map <C-f> :switch<CR>
map <C-r> :refresh<CR>
map <C-t> :switchbreak<CR>
map <C-o> :up<CR>
map <C-i> :down<CR>
imap <C-o> <C-k>
imap <C-v> <PageDown>
map w iw<Space>
map W iW<Space>
map X :X<CR>
map b ib
map t it<Space>
